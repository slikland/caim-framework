{
	"paths":
	{
		"cdn":"",
		"base":"",
		"images":"{base}media/images/"
	},	
	"navigation":{
		"forceHashBang":false,
		"startBefore":true,
		"autoStart":true,
		"instantiateViews":true,
		"defaultView":"home"
	},
	"conditions": {
        "mobile":{
            "browser":{
            	"mobile": true
            }
        },
        "mobile-size": {
            "browser":{
            	"mobile": true
            },
            "size": {
                "max-width": "767<"
            }
        },
        "ds":{
        	"size": {
        		"max-width": 768
        }
        },
        "dm":{
        	"size": {
        		"max-width": 960
        }
        },
        "dl":{
        	"size": {
        		"max-width": 1040
        }
        },
        "full":{
        	"size": {
        		"max-width": 1600
        }}
    },	
	"views":[
		{
			"id":"home",
			"class":"template-home-view",
			"route":"/",
			"content":"{base}data/home.json",
			"cache":false,
			"destroyable":true,
			"loadContent":true
		},
		{
			"id":"sub1",
			"class":"template-sub-view",
			"content":"{base}data/sub1.json",
			"route":"/sub-view-01",
			"parentView":"home",
			"destroyable":true,
			"loadContent":true,
			"cache":true
			
		},
		{
			"id":"sub2",
			"class":"template-sub-view",
			"content":"{base}data/sub2.json",
			"route":"/sub-view-02",
			"destroyable":true,
			"loadContent":true,
			"cache":false
		},
		{
			"id":"sub3",
			"class":"template-sub-view",
			"content":"{base}data/sub3.json",
			"route":"/sub-view-03",
			"destroyable":true,
			"loadContent":true,
			"cache":false
		},
		{
			"id":"sub4",
			"class":"template-sub-view",
			"content":"{base}data/sub4.json",
			"route":"/sub-view-04",
			"destroyable":true,
			"loadContent":true,
			"cache":false
		},
		{
			"id":"sub5",
			"class":"template-sub-view",
			"content":"{base}data/sub5.json",
			"route":"/sub-view-05",
			"destroyable":true,
			"loadContent":true,
			"cache":false
		}
	],
	"required":
	{
		"preloader":
		[
			{
				"id": "preloader-css",
				"src": "{base}css/preloader.css",
				"cache":false
			},
			{
				"id":"preloader-contents",
				"content":"{base}data/preloader.json",
				"cache":false
			}
		],
		"core":
		[
			{
				"id":"vendors",
				"src":"{base}js/vendors.js",
				"cache":false
			}
		],
		"main":
		[
			{
				"id": "main-css",
				"src": "{base}css/main.css",
				"cache":false
			},
			{
				"id": "main-js",
				"src": "{base}js/main.js",
				"cache":false
			}
		]
	}
}
