{
	"paths":
	{
		"cdn":"",
		"base":"",
		"images":"{base}media/images/"
	},	
	"navigation":{
		"options":{
			"orientation":"vertical",
			"scrollToTime":1,
			"pauseInvisibleViews":true,
			"showViewLimit":0.5,
			"snap":{
				"delay":1
			}
		},		
		"forceHashBang":false,
		"startBefore":true,
		"autoStart":true,
		"instantiateViews":true,
		"defaultView":"home"
	},
	"views":[
		{
			"id":"home",
			"class":"template-home-view",
			"route":"/",
			"content":"{base}data/home.json",
			"cache":true,
			"destroyable":true,
			"loadContent":true
		},
		{
			"id":"sub1",
			"class":"template-sub-view",
			"content":"{base}data/sub1.json",
			"route":"/sub-view-01",
			"destroyable":true,
			"loadContent":true,
			"cache":true
		},
		{
			"id":"sub2",
			"class":"template-sub-view",
			"content":"{base}data/sub2.json",
			"route":"/sub-view-02",
			"destroyable":true,
			"loadContent":true,
			"cache":true
		},
		{
			"id":"sub3",
			"class":"template-sub-view",
			"content":"{base}data/sub3.json",
			"route":"/sub-view-03",
			"destroyable":true,
			"loadContent":true,
			"cache":true
		},
		{
			"id":"sub4",
			"class":"template-sub-view",
			"content":"{base}data/sub4.json",
			"route":"/sub-view-04",
			"destroyable":true,
			"loadContent":true,
			"cache":true
		},
		{
			"id":"sub5",
			"class":"template-sub-view",
			"content":"{base}data/sub5.json",
			"route":"/sub-view-05",
			"destroyable":true,
			"loadContent":true,
			"cache":true
		}
	],
	"required":
	{
		"preloader":
		[
			{
				"id": "preloader-css",
				"src": "{base}css/preloader.css"
			},
			{
				"content":"{base}data/preloader.json"
			}
		],
		"core":
		[
			{
				"id":"vendors",
				"src":"{base}js/vendors.js"
			}
		],
		"main":
		[
			{
				"id": "main-css",
				"src": "{base}css/main.css"
			},
			{
				"id": "main-js",
				"src": "{base}js/main.js"
			}
		]
	}
}
