{
	"paths":
	{
		"cdn":"",
		"base":""
	},
	"conditions":
	{
		"sizeBlah": {
			"size": {
				"min-width":320,
				"min-height":480
			},
			"orientation":"landscape"
		},
		"size1": {
			"size": {
				"max-width":1024,
				"max-height":768
			},
			"orientation":"landscape"
		},
		"size2": {
			"size": {
				"min-width":320,
				"min-height":480,
				"max-width":1024,
				"max-height":768
			},
			"orientation":"landscape"
		},
		"size3": {
			"size": {
				"min-width":320,
				"max-height":768
			},
			"orientation":"landscape"
		},
		"bla": {
			"browser":{
				"ua":"",
				"name":"Chrome",
				"webgl":true,
				"canvas":true
			},
			"domain":"local.slikland.com",
			"platform":"MacIntel"
		},
		"bla1": {
			"browser":{
				"name":"Safari",
				"canvas":true
			}
		},
		"bla2": {
			"browser":{
				"name":"Chrome",
				"touch":false
			}
		}
	},	
	"navigation":{
		"type":"scroll",
		"options":{
			"orientation":"vertical",
			"scrollToTime":3,
			"showViewPercent":0.5,
			"snap":{
				"delay":1
			}
		},
		"forceHashBang":false,
		"startBefore":true,
		"autoStart":true,
		"instantiateViews":true,
		"defaultView":"home"
	},
	"views":[
		{
			"id":"home",
			"class":"home-view",
			"route":"/",
			"content":"{base}data/home/content.json",
			"cache":true,
			"snap":false,
			"destroyable":true,
			"loadContent":true
		},
		{
			"id":"sub1",
			"class":"sub1-view",
			"content":[
				{
					"condition":"bla",
					"file":"{base}data/home/sub1/content.json"
				},
				{
					"condition":"bla1"
				}
			],
			"route":"/sub1",
			"destroyable":true,
			"cache":true
		},
		{
			"id":"sub2",
			"class":"sub2-view",
			"content":"{base}data/home/sub2/content.json",
			"route":"/galeria(/{id})?",
			"destroyable":true,
			"loadContent":true
		},
		{
			"id":"sub3",
			"class":"sub3-view",
			"route":"/blah/sub3/{id}",
			"destroyable":true,
			"loadContent":true
		},
		{
			"id":"test",
			"class":"test1-view",
			"route":"/test1",
			"content":"{base}data/test/content.json",
			"destroyable":false,
			"loadContent":true
		}
	],
	"required":
	{
		"preloader":
		[
			{
				"id": "preloader-css",
				"src": "{base}css/preloader.css"
			}
		],
		"tracking":
		[
			{
				"id": "test-tracking",
				"src": "{base}data/tracking.json"
			}
		],
		"core":
		[
			{
				"id":"vendors",
				"src":"{base}js/vendors.js"
			}
		],
		"main":
		[
			{
				"content": [
					{
						"condition":"bla",
						"file":"{base}data/main/content.json"
					}
				]
			},
			{
				"id": "main-css",
				"src": "{base}css/main.css"
			},
			{
				"id": "main-js",
				"src": "{base}js/main.js"
			}
		]
	}
}
